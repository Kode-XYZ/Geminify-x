# gplaces Gemini client initialization example
# place this file in ~/.gplacesrc or /etc/gplacesrc

# define default handlers
set https							"xdg-open %u"
set "text/plain; charset=utf-8"		"xdg-open %f"

# define some aliases
set search							geminispace.info/search
set home							gemini.circumlunar.space
set capcom							gemini.circumlunar.space/capcom
set spacewalk						rawtext.club/~sloum/spacewalk.gmi
set gmisub							calcuode.com/gmisub-aggregate.gmi

# subscribe to some pages
sub									rawtext.club/~sloum/spacewalk.gmi
sub									midnight.pub
sub									gemini.conman.org/boston.gemini

# define a generator for ~/.gplaces_%h.crt and ~/.gplaces_%h.key
set mkcert							"openssl req -new -subj /CN=`whoami` -x509 -newkey ec -pkeyopt ec_paramgen_curve:prime256v1 -days 1825 -nodes -out ~/.gplaces_%h.crt -keyout ~/.gplaces_%h.key"

# pager for long text; change to cat to disable paging
set pager							"less -r"

# download timeout
set timeout							15
